{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm ci --legacy-peer-deps",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "includeFiles": "dist/**,build/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
