{
  "name": "marketplace-cms",
  "version": "1.0.0",
  "description": "PayloadCMS backend for marketplace platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build": "tsc --skipLibCheck && payload build",
    "start": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "migrate": "payload migrate",
    "migrate:up": "payload migrate:up",
    "generate:types": "payload generate:types",
    "vercel-build": "./node_modules/.bin/tsc --skipLibCheck && ./node_modules/.bin/payload build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@aws-sdk/lib-storage": "^3.914.0",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-postgres": "^0.8.0",
    "@payloadcms/plugin-cloud-storage": "^1.2.2",
    "@payloadcms/richtext-lexical": "^0.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "path-browserify": "^1.0.1",
    "payload": "^2.30.0",
    "resend": "^6.6.0",
    "typescript": "^5.3.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2"
  }
}
